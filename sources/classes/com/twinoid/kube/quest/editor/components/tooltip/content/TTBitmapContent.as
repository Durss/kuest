package com.twinoid.kube.quest.editor.components.tooltip.content {	import flash.display.BitmapData;	import flash.display.Sprite;	import flash.geom.Matrix;	/**	 * Displays an image on the tooltip.	 * 	 * @author  Francois	 */	public class TTBitmapContent extends Sprite implements ToolTipContent {								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>TTBitmapContent</code>.		 */		public function TTBitmapContent() {			initialize();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */		/**		 * Makes the component garbage collectable.		 */		public function dispose():void {			if(numChildren == 0) return;						while(numChildren > 0){ removeChildAt(0); }			}				/**		 * Populates the content		 */		public function populate(bitmap:BitmapData):void {			var margin:int = 5;						graphics.clear();
			graphics.beginFill(0xff0000, 0);
			graphics.drawRect(0, 0, bitmap.width + margin*2, bitmap.height + margin*2);			graphics.endFill();						var m:Matrix = new Matrix();			m.translate(margin, margin);
			graphics.beginBitmapFill(bitmap, m);
			graphics.drawRect(margin, margin, bitmap.width, bitmap.height);			graphics.endFill();		}								/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initialize the class.		 */		protected function initialize():void {					}	}}